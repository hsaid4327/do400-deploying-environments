pipeline {
    agent {
        node {
            label 'maven'
        }
    }
    stages {
        stage('Tests') {
            steps {
                sh '''
                 cd shopping-cart 
                ./mvnw clean test
                '''
            }
        }
        stage('Package') {
            steps {
                sh '''
                     cd shopping-cart
                    ./mvnw package -DskipTests \
                    -Dquarkus.package.type=uber-jar
                '''
                archiveArtifacts 'shopping-cart/target/*.jar'
            }
        }
    }
}
